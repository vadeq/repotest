<DesignState-config>
 <properties>

  <!-- runtime -->
  <property name="debug-mode" value="true"/>
  <property name="os-platform" value="windows" />

  <!-- project -->
  <property name="organization" value="demo" />
  <property name="project" value="demo" />

  <!-- routing -->
  <property name="domain-name" value="demo"/>
  <property name="server-name" value="node-0"/>
  <property name="hostname" value="zero-gravity" />

  <!-- service locations  -->
  <property name="central-server" value="DesignState-node-0" />
  <property name="service-finder-hostname" value="zero-gravity"/>
  <property name="file-depot-hostname" value="zero-gravity"/>

  <!-- local directory structure -->
  <dir name="zws-home" path="\zws" />
  <dir name="zws-temp" path="[zws-home]\temp"/> 
  <dir name="zws-env" path="[zws-home]\env" />  
  <dir name="zws-bin" path="[zws-home]\bin" />  
  <dir name="zws-app" path="[zws-home]\app" />  
  <dir name="zws-data" path="[zws-home]\data"/>
  <dir name="zws-local" path="[zws-data]\local"/>
  <dir name="ldb-path-base" path="[zws-data]\space"/>

  <dir name="zws-log" path="[zws-home]\log"/>
  <dir name="zws-work" path="[zws-log]\work"/>

  <dir name="DesignState-home" path="[zws-home]\DesignState" />
  <dir name="zws-config" path="[DesignState-home]\config" />

  <dir name="zws-xml" path="[DesignState-home]\xml" />  
  <dir name="zws-xslt" path="[zws-xml]\xslt" />


  <!-- archive configuration -->
  <dir name="zws-backup" path="[zws-home]\backup" />
  <property name="zws-backup-tables" value="zwsuser, activity, process,family,qxelement,qxqueue,synchronizationlog" />
  <property name="zws-backup-locations" value="
		[zws-local],
		[ldb-path-base]\archive,
		[zws-home]\data-chry\local,
		[zws-home]\data-chry\temp\chrysalis\in,
		[zws-home]\data-chry\temp\chrysalis\out,
		[zws-home]\data-chry\temp\chrysalis\in,
		[zws-home]\data-chry\temp\chrysalis\out,
		[zws-home]\DesignState\application\pen-engine\logs,
		[zws-home]\DesignState\application\chrysalis\logs,
		[zws-home]\DesignState\application\pen-engine\webapps\FileDepot\Repository,
		[zws-temp]\chrysalis\file-depot,
		[zws-work]\archive,
		[zws-work]\ilink-Qx,
		[zws-work]\ListEvents,
		[zws-work]\ilink-Search
		" />  
 </properties>
</DesignState-config>
